@model ProjectCWeb_DuboisAnke_2ProA.Models.Vak

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/personalstyling.css" />
<link rel="stylesheet" href="~/css/footerstyle.css" />

<br />
<h1>VERWIJDER</h1>
<hr/>
<h4 class="text-danger">BENT U ZEKER DAT U DIT WILT VERWIJDEREN?</h4>
<div>
    <hr />
    <dl class="row body-style">
        <dt class="col-sm-2">
            <label class="h5">NAAM</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VakNaam)
        </dd>
        <dt class="col-sm-2">
            <label class="h5">STUDIEPUNTEN</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudiePunten)
        </dd>
        <dt class="col-sm-2">
            <label class="h5">HANDBOEK</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Handboek.Afbeelding)
        </dd>
    </dl>
    <hr/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="VakId" />
        <input type="submit" value="VERWIJDER" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar VAKKEN</a>
    </form>
</div>
