@model ProjectCWeb_DuboisAnke_2ProA.Models.Handboek

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/personalstyling.css" />
<link rel="stylesheet" href="~/css/footerstyle.css" />

<br />
<h1>VERWIJDER</h1>
<hr/>
<h4 class="text-danger">BENT U ZEKER DAT U DIT WILT VERWIJDEREN?</h4>
<div>
    <hr />
    <dl class="row body-style">
        <dt class="col-sm-2">
            <label class="h5">TITEL</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
        <dt class="col-sm-2">
            <label class="h5">PRIJS</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kostprijs)
        </dd>
        <dt class="col-sm-2">
            <label class="h5">UITGAVEDATUM</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UitgifteDatum)
        </dd>
        <dt class="col-sm-2">
            <label class="h5">COVER</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Afbeelding)
        </dd>
    </dl>
    <hr/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="HandboekId" />
        <input type="submit" value="VERWIJDER" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar HANDBOEKEN</a>
    </form>
</div>
