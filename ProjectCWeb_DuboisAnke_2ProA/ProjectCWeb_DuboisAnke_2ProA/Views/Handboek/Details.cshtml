@model ProjectCWeb_DuboisAnke_2ProA.Models.Handboek

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/personalstyling.css" />
<link rel="stylesheet" href="~/css/footerstyle.css" />

<br />
<h1>DETAILS</h1>

<div>
    <hr />
    <dl class="row body-style">
        <dt class="col-sm-2">
            <label class="h6">ID</label>
        </dt>
        <dd class="col-sm-10">
            <p>
                @Html.DisplayFor(model => model.HandboekId)
            </p>
        </dd>
        <dt class="col-sm-2">
            <label class="h6">TITEL</label>
        </dt>
        <dd class="col-sm-10">
            <p>
                @Html.DisplayFor(model => model.Titel)
            </p>
        </dd>
        <dt class="col-sm-2">
            <label class="h6">PRIJS</label>
        </dt>
        <dd class="col-sm-10">
            <p>
                @Html.DisplayFor(model => model.Kostprijs)
            </p>

        </dd>
        <dt class="col-sm-2">
            <label class="h6">UITGAVEDATUM</label>
        </dt>
        <dd class="col-sm-10">
            <p>
                @Html.DisplayFor(model => model.UitgifteDatum)
            </p>

        </dd>
        <dt class="col-sm-2">
            <label class="h6">COVER</label>
        </dt>
        <dd class="col-sm-10">
            <p class="justify-content-center m-auto">
                @if (Model.Afbeelding != null)
                {
                    <img src="@Model.Afbeelding" width="150" />
                }
            </p>
        </dd>
    </dl>
</div>
<hr/>
<div>
    <a asp-action="Edit" asp-route-id="@Model.HandboekId">Bewerk</a> |
    <a asp-action="Index">Terug naar HANDBOEKEN</a>
</div>
